{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "bam",
  "affected": {
    "defaultBase": "master"
  },
  "cli": {
    "defaultCollection": "@nrwl/next"
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e", "graphql-codegen"]
      }
    }
  },
  "generators": {
    "@nrwl/react": {
      "application": {
        "babel": true
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "@emotion/styled",
        "linter": "eslint"
      }
    },
    "@eddeee888/nx-graphql-code-generator": {
      "add": {
        "schema": "libs/graph-backend/**/*.graphqls",
        "config": "graphql-codegen.yml",
        "pluginPreset": "typescript-resolvers"
      }
    }
  },
  "defaultProject": "main",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"]
    }
  }
}
