# https://www.prisma.io/features/data-modeling/

type User {
  id: ID! @unique
  email: String! @unique
  displayName: String
  firstName: String!
  lastName: String!
  password: String!
  userGroup: String
  classes: [Class!]! @relation(name: "UserCreatedClasses")
}

type Class {
  id: ID! @unique
  creator: User! @relation(name: "UserCreatedClasses")
  name: String!
  description: String!
  categories: [ClassCategory!]!
}

enum ClassCategory {
  ACCOUNTING
  PROGRAMMING
  HEALTH_FITNESS
}
