# https://www.prisma.io/features/data-modeling/

type User {
  id: ID! @unique
  email: String! @unique
  displayName: String
  firstName: String!
  lastName: String!
  password: String!
  userGroup: String!
  classes: [Class!]! @relation(name: "UserCreatedClasses")
}

type Class {
  id: ID! @unique
  creator: User! @relation(name: "UserCreatedClasses")
  price: Int!
  name: String!
  description: String!
  categories: [ClassCategory!]!
  streetUnit: String!
  streetAddress: String!
  city: String!
  postcode: String!
  state: String!
  country: String!
  contactNumber: String!
  sessions: [ClassSession!]!
}

type ClassCategory {
  id: ID! @unique
  name: String!
}

type ClassSession {
  id: ID! @unique
  day: ClassSessionDay!
  startTime: String!
  endTime: String!
  capacity: Int!
}

enum ClassSessionDay {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}
