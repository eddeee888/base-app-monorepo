{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --config ./nodemon.json --legacy-watch --polling-interval 5000",
    "build": "tsc --noEmit false && cp src/graphql/schemas/schema.graphql build/graphql/schemas/schema.graphql && cp src/app.js build/app.js",
    "serve": "NODE_PATH=./build node ./build/web/server.js",
    "start:crons": "nodemon --config ./nodemon.crons.json --legacy-watch --polling-interval 5000",
    "serve:crons": "NODE_PATH=./build node ./build/crons/jobs.js",
    "prisma:up": "prisma migrate up --experimental",
    "prisma:generate": "prisma generate",
    "prisma:reseed": "yarn build && node ./build/prisma/reset.js && node ./build/prisma/seed.js",
    "gqlgen": "graphql-codegen --config codegen.yml",
    "test": "yarn test:prisma-delete && yarn test:prisma-setup && yarn test:jest",
    "test:jest": "jest -i",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "add-gcg": "./scripts/install_gcg.sh"
  },
  "author": "Eddy Nguyen",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load-files": "6.0.8",
    "@graphql-tools/merge": "6.0.8",
    "apollo-server": "2.14.2",
    "apollo-server-express": "2.14.2",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.3",
    "cron": "1.7.2",
    "dotenv": "6.2.0",
    "esm": "3.2.14",
    "express": "4.17.1",
    "graphql": "14.6.0",
    "jsonwebtoken": "8.4.0",
    "route-codegen": "0.6.0",
    "uuid": "3.3.3",
    "yup": "0.28.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "1.13.1",
    "@graphql-codegen/cli": "1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@prisma/cli": "2.0.0",
    "@prisma/client": "2.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.2",
    "@types/cron": "1.7.1",
    "@types/jest": "24.0.12",
    "@types/jsonwebtoken": "8.3.4",
    "@types/uuid": "3.4.5",
    "@types/yup": "0.26.34",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "jest": "24.7.1",
    "jest-express": "1.10.0",
    "nodemon": "1.18.9",
    "prettier": "2.0.2",
    "ts-jest": "24.0.2",
    "typescript": "3.8.3"
  }
}
