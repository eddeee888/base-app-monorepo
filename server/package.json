{
  "name": "bra-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --noEmit false",
    "start": "nodemon --config ./nodemon.json --legacy-watch --polling-interval 5000",
    "serve": "NODE_PATH=./build node ./build/web/server.js",
    "start:crons": "nodemon --config ./nodemon.crons.json --legacy-watch --polling-interval 5000",
    "serve:crons": "NODE_PATH=./build node ./build/crons/jobs.js",
    "prisma:generate": "prisma generate --env-file .env.dev",
    "prisma:deploy": "prisma deploy --env-file .env.dev",
    "prisma:seed": "yarn build && yarn prisma seed --reset --env-file .env.dev",
    "prisma:reset": "prisma reset --env-file .env.dev",
    "prisma:token": "prisma token --env-file .env.dev",
    "gg": "graphql-codegen --config codegen.yml",
    "check:ts": "tsc -p tsconfig.json",
    "test": "yarn test:prisma-delete && yarn test:prisma-setup && yarn test:jest",
    "test:jest": "jest -i",
    "test:prisma-setup": "prisma deploy --force --env-file .env.test",
    "test:prisma-delete": "prisma delete --force --env-file .env.test",
    "format:prettier": "prettier --config .prettierrc.json --write \"src/**/*.ts*\"",
    "format:check": "eslint 'src/**/*.ts'",
    "format:eslint": "eslint --fix 'src/**/*.ts'",
    "format": "yarn format:prettier && yarn format:eslint",
    "add-gcg": "./scripts/install_gcg.sh"
  },
  "author": "Eddy Nguyen",
  "license": "ISC",
  "dependencies": {
    "@bit/eddeee888.base-react-app-utils.validations": "^0.0.1",
    "@types/yup": "^0.26.4",
    "add": "^2.0.6",
    "apollo-server": "^2.9.4",
    "apollo-server-express": "^2.9.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.3",
    "cron": "^1.7.2",
    "dotenv": "^6.2.0",
    "esm": "^3.2.14",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^8.4.0",
    "prisma-client-lib": "^1.33.0",
    "request": "^2.88.0",
    "route-codegen": "^0.0.6",
    "uuid": "^3.3.3",
    "yup": "^0.26.6"
  },
  "devDependencies": {
    "@graphql-codegen/add": "1.10.0",
    "@graphql-codegen/cli": "1.10.0",
    "@graphql-codegen/typescript": "1.10.0",
    "@graphql-codegen/typescript-resolvers": "1.10.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/cron": "^1.7.1",
    "@types/jest": "^24.0.12",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/request": "^2.48.3",
    "@types/uuid": "^3.4.5",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.7.1",
    "jest-express": "^1.10.0",
    "nodemon": "^1.18.9",
    "prisma": "^1.34.8",
    "ts-jest": "^24.0.2",
    "tsconfig-paths": "^3.7.0",
    "typescript": "^3.7.4"
  }
}
