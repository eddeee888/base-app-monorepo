{
  "name": "@bam/server",
  "version": "1.0.0",
  "description": "GraphQL and API server",
  "main": "index.js",
  "scripts": {
    "build:app": "webpack --config webpack.app.js",
    "start:app": "concurrently -n Webpack,Nodemon \"yarn webpack --watch --config webpack.app.js\" \"yarn watch:app\" -p \"[{name} - {time}]\" -c \"green\",\"yellow\"",
    "watch:app": "nodemon --config ./nodemon.json --legacy-watch --polling-interval 5000",
    "serve:app": "NODE_PATH=./build/app node ./build/app/web/server.js",
    "serve:app:prod": "NODE_PATH=./build/app pm2-runtime ./build/app/web/server.js",
    "build:crons": "webpack --config webpack.crons.js",
    "start:crons": "concurrently -n Webpack,Nodemon \"yarn webpack --watch --config webpack.crons.js\" \"yarn watch:crons\" -p \"[{name} - {time}]\" -c \"green\",\"yellow\"",
    "watch:crons": "nodemon --config ./nodemon.crons.json --legacy-watch --polling-interval 5000",
    "serve:crons": "NODE_PATH=./build/crons node ./build/crons/jobs.js",
    "build:libs": "tsc --project tsconfig.libs.json --noEmit false --outDir ./build/libs",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:reset": "prisma migrate reset --skip-seed",
    "prisma:migrate:reseed": "prisma migrate reset",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate:native": "PRISMA_BINARY_TARGET=native prisma generate",
    "gqlgen": "graphql-codegen --config codegen.yml",
    "test:app": "./scripts/test-app.sh",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "lint": "eslint 'src/**/*.{js,ts,tsx,graphql}'",
    "typecheck": "tsc -b tsconfig.app.json tsconfig.crons.json tsconfig.libs.json"
  },
  "author": "Eddy Nguyen",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load-files": "6.0.8",
    "@graphql-tools/merge": "6.0.8",
    "@route-codegen/utils": "0.2.0",
    "apollo-server-express": "2.23.0",
    "apollo-server-plugin-base": "0.10.0",
    "bcryptjs": "2.4.3",
    "cookie": "0.4.0",
    "cookie-parser": "1.4.5",
    "cron": "1.7.2",
    "esm": "3.2.14",
    "express": "4.17.1",
    "express-async-handler": "1.1.4",
    "graphql": "15.5.0",
    "graphql-redis-subscriptions": "2.3.1",
    "graphql-subscriptions": "1.1.0",
    "helmet": "4.1.1",
    "http-errors": "1.8.0",
    "ioredis": "4.17.3",
    "jsonwebtoken": "8.4.0",
    "uuid": "8.3.0",
    "yup": "0.28.3"
  },
  "devDependencies": {
    "@babel/core": "7.13.15",
    "@babel/preset-env": "7.13.5",
    "@babel/preset-typescript": "7.13.0",
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-resolvers": "1.19.0",
    "@graphql-eslint/eslint-plugin": "0.9.1",
    "@prisma/client": "2.21.2",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie": "0.4.0",
    "@types/cookie-parser": "1.4.2",
    "@types/cron": "1.7.1",
    "@types/http-errors": "1.8.0",
    "@types/ioredis": "4.17.4",
    "@types/jest": "26.0.22",
    "@types/jsonwebtoken": "8.3.4",
    "@types/uuid": "8.3.0",
    "@types/yup": "0.26.34",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "babel-jest": "26.6.0",
    "clean-webpack-plugin": "3.0.0",
    "concurrently": "6.0.2",
    "copy-webpack-plugin": "6.0.3",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-react": "7.23.2",
    "glob": "7.1.6",
    "graphql-request": "3.1.0",
    "jest": "26.6.0",
    "jest-express": "1.10.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "prisma": "2.21.2",
    "ts-loader": "8.0.4",
    "ts-node": "9.0.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "4.3.4",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-node-externals": "1.7.2"
  }
}
