{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.app.js",
    "start": "concurrently -n Webpack,Nodemon \"yarn webpack --watch --config webpack.app.js\" \"yarn watch\" -p \"[{name} - {time}]\" -c \"green\",\"yellow\"",
    "watch": "nodemon --config ./nodemon.json --legacy-watch --polling-interval 5000",
    "serve": "NODE_PATH=./build/app node ./build/app/web/server.js",
    "build:crons": "NODE_ENV=production webpack --config webpack.crons.js",
    "start:crons": "concurrently -n Webpack,Nodemon \"yarn webpack --watch --config webpack.crons.js\" \"yarn watch:crons\" -p \"[{name} - {time}]\" -c \"green\",\"yellow\"",
    "watch:crons": "nodemon --config ./nodemon.crons.json --legacy-watch --polling-interval 5000",
    "serve:crons": "NODE_PATH=./build/crons node ./build/crons/jobs.js",
    "build:libs": "tsc --project tsconfig.libs.json --noEmit false",
    "prisma:migrate:up": "prisma migrate up --experimental ",
    "prisma:generate:prod": "PRISMA_BINARY_TARGET=rhel-openssl-1.0.x prisma generate",
    "prisma:generate:dev": "PRISMA_BINARY_TARGET=native prisma generate",
    "prisma:reseed": "yarn tsc && node ./build/app/prisma/reset.js && node ./build/app/prisma/seed.js",
    "gqlgen": "graphql-codegen --config codegen.yml",
    "test": "yarn test:prisma-delete && yarn test:prisma-setup && yarn test:jest",
    "test:jest": "jest -i",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "add-gcg": "./scripts/install_gcg.sh"
  },
  "author": "Eddy Nguyen",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/load-files": "6.0.8",
    "@graphql-tools/merge": "6.0.8",
    "apollo-server": "2.14.2",
    "apollo-server-express": "2.14.2",
    "bcryptjs": "2.4.3",
    "cookie-parser": "1.4.3",
    "cron": "1.7.2",
    "dotenv": "6.2.0",
    "esm": "3.2.14",
    "express": "4.17.1",
    "graphql": "14.6.0",
    "jsonwebtoken": "8.4.0",
    "route-codegen": "0.6.0",
    "uuid": "3.3.3",
    "yup": "0.28.3"
  },
  "devDependencies": {
    "@graphql-codegen/add": "1.13.1",
    "@graphql-codegen/cli": "1.13.1",
    "@graphql-codegen/typescript": "1.13.1",
    "@graphql-codegen/typescript-resolvers": "1.13.1",
    "@prisma/cli": "2.2.0",
    "@prisma/client": "2.2.0",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "1.4.2",
    "@types/cron": "1.7.1",
    "@types/jest": "24.0.12",
    "@types/jsonwebtoken": "8.3.4",
    "@types/uuid": "3.4.5",
    "@types/yup": "0.26.34",
    "@typescript-eslint/eslint-plugin": "2.26.0",
    "@typescript-eslint/parser": "2.26.0",
    "clean-webpack-plugin": "3.0.0",
    "concurrently": "5.1.0",
    "copy-webpack-plugin": "6.0.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "glob": "7.1.6",
    "jest": "24.7.1",
    "jest-express": "1.10.0",
    "nodemon": "1.18.9",
    "prettier": "2.0.2",
    "ts-jest": "24.0.2",
    "ts-loader": "7.0.5",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "typescript": "3.8.3",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-node-externals": "1.7.2"
  }
}
