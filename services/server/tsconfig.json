{
  "compilerOptions": {
    "lib": ["es2016", "esnext.asynciterable"],
    "baseUrl": "./src",
    "outDir": "./build",
    "paths": {
      "@libs/*": ["./libs/*"],
      "~/*": ["./app/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitAny": true
  },
  "include": ["./src/app/**/*", "./src/crons/**/*", "./src/libs/**/*"],
  "exclude": ["node_modules", "./src/**/generated/*.ts"]
}
