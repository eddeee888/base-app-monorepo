{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src/libs",
    "baseUrl": "./src/libs",
    "paths": {
      "@libs/*": ["./*"]
    },
    "outDir": "./build-tsc/libs",
    "tsBuildInfoFile": "./build-tsc/libs/tsconfig.libs.tsbuildinfo"
  },
  "include": ["./src/libs/**/*"],
  "exclude": ["./src/libs/shared-*"]
}
